<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/settings_category_proxy_title">

    <ListPreference
        android:defaultValue="@string/settings_proxy_protocol_value_direct"
        android:entries="@array/settings_proxy_protocol_name"
        android:entryValues="@array/settings_proxy_protocol"
        android:key="@string/settings_proxy_protocol_key"
        android:title="@string/settings_proxy_protocol_title"
        app:singleLineTitle="false"
        app:iconSpaceReserved="false"
        app:useSimpleSummaryProvider="true" />

    <EditTextPreference
        android:defaultValue="@string/settings_proxy_server_default_value"
        android:key="@string/settings_proxy_server_key"
        android:title="@string/settings_proxy_server_title"
        app:singleLineTitle="false"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false" />

    <EditTextPreference
        android:defaultValue="@string/settings_proxy_port_default_value"
        android:key="@string/settings_proxy_port_key"
        android:title="@string/settings_proxy_port_title"
        app:singleLineTitle="false"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false" />

</PreferenceScreen>
